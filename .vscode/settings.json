{
    // Exclude from the editor
    "files.exclude": {
        "**/node_modules": true
    },

    // Exclude from search
    "search.exclude": {
        "dist/": true
    },

    // Formatting
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,

    // Trim on save
    "files.trimTrailingWhitespace": true,

    // Prettier settings
    "prettier.tabWidth": 4,
    "prettier.eslintIntegration": true,
    "prettier.printWidth": 120,
    "prettier.cssEnable": ["css", "less", "scss"]
}